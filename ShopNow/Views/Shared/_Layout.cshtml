<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

   




</head>
<body>
    <div class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="pull-left">
                    @Html.ActionLink("ShopNow", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav mr-auto">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-item nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-item nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-item nav-link" })</li>

                    <li>@Html.ActionLink("Users", "listUsers", "User", null, new { @class = "nav-item nav-link" })</li>
                    <li>@Html.ActionLink("Admin", "listAdmins", "User", null, new { @class = "nav-item nav-link" })</li>
                    <li>@Html.ActionLink("Cashiers", "listCashiers", "User", null, new { @class = "nav-item nav-link" })</li>
                    <li>@Html.ActionLink("Stores", "listStores", "Store", null, new { @class = "nav-item nav-link" })</li>
                    <li>@Html.ActionLink("Stock", "listProducts", "Stock", null, new { @class = "nav-item nav-link" })</li>
                    <li>@Html.ActionLink("Customers", "listCustomers", "User", null, new { @class = "nav-item nav-link" })</li>
                    <li>@Html.ActionLink("Select Products", "SelectProducts", "Transaction", null, new { @class = "nav-item nav-link" })</li>
                    <li>@Html.ActionLink("listUsersCustomers", "listUserCustomer", "User", null, new { @class = "nav-item nav-link" })</li>
                    <li>@Html.ActionLink("AjaxAddCust", "ajaxAddCustomerListing", "User", null, new { @class = "nav-item nav-link" })</li>
                    
                    <li>@Html.ActionLink("AjaxAddStore", "ajaxAddStoreListing", "Store", null, new { @class = "nav-item nav-link" })</li>


                </ul>
                <div class="me-auto">
                    @Html.ActionLink("Logout", "Logout", "User", null, new { @class = "btn btn-danger", onclick = "return confirm('Confirm Logout?');" }) 
                </div>
            </div>
           
        </div>
    </div>
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div>
            <footer id="footer">
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
