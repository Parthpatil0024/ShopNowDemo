@model List<ShopNowBL.Model.tblStock>

@{
    ViewBag.Title = "listProducts";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Add Product", "addProduct","Stock", null,new { @class = "btn btn-primary" })
</p>
<table class="table table-dark table-bordered table-hover table-sm">
    <tr>
        <th>
            Product Id
        </th>
        <th>
            Product Name
        </th>
        <th>
            Product Qty
        </th>
        <th>
            Base Price
        </th>
        <th>
            Selling Price
        </th>
        <th>
            Discount
        </th>
        <th>
            Created By
        </th>
        <th>
            Created Date
        </th>
        <th class="text-center">
            Actions
        </th>

    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Id
        </td>
        <td>
            @item.ProductName
        </td>
        <td>
            @item.ProductQty
        </td>
        <td>
            @item.BasePrice
        </td>
        <td>
            @item.SellingPrice
        </td>
        <td>
            @item.Discount
        </td>
        <td>
            @item.CreatedBy
        </td>
        <td>
            @item.CreatedDate
        </td>
        <td align="center">
            <a href=@Url.Action("editProduct", "Stock", new { id = item.Id })> <i class="fas fa-pen"></i> </a> &nbsp|&nbsp

            <a href=@Url.Action("deleteProduct","Stock",new {id=item.Id}) new { onclick="return confirm('Confirm delete?');" })><i class="fa  fa-trash" style="color:red"></i></a>


        </td>
    </tr>
}

</table>
