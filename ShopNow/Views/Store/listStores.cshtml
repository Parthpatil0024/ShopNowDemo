@model List<ShopNowBL.Model.tblStore>

@{
    ViewBag.Title = "listStores";
}

<h2>Stores</h2>

<p>
    @Html.ActionLink("Add Store", "addStore","Store",null, new { @class = "btn btn-primary" })
</p>
<table class="table table-dark table-bordered table-hover table-sm">
    <tr>
        <th>
            Store Id
        </th>
        <th>
            Store Name
        </th>
        <th>
            Address
        </th>
        <th>
            City
        </th>
        <th>
            Contact No
        </th>
        <th>
            Started Date
        </th>
        <th>
            Created By
        </th>
        <th>
            Created Date
        </th>
        <th class="text-center">
            Actions
        </th>

    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Id
        </td>
        <td>
            @item.StoreName
        </td>
        <td>
            @item.Address
        </td>
        <td>
            @item.City
        </td>
        <td>
            @item.ContactNo
        </td>
        <td>
            @item.StartedDate
        </td>
        <td>
            @item.CreatedBy
        </td>
        <td>
            @item.CreatedDate
        </td>
        <td align="center">
            <a href=@Url.Action("editStore","Store",new {id=item.Id})><i class="fas fa-pen"></i></a> &nbsp|&nbsp
            <a href=@Url.Action("deleteStore","Store",new {id=item.Id}) new { onclick="return confirm('Confirm delete?');" })><i class="fa  fa-trash" style="color:red"></i></a>

        </td>

    </tr>
}

</table>
