@model ShopNow.ViewModels1.UserCustomerModel

@{
    ViewBag.Title = "_AjaxUserCustomer";
}

<h3>Users</h3>
<div>UserCount: @Model.UserCount  </div>
<div>

    <table class="table table-dark table-bordered table-hover table-sm" border="1">
        <tr>
            <th>
                User Id
            </th>
            <th>
                User Name
            </th>
            <th>
                Email Id
            </th>
            <th>
                Mobile No
            </th>
            <th>
                Role
            </th>
            <th>
                Password
            </th>
            <th>
                City
            </th>
            <th>
                Store Id
            </th>
            <th>
                Created By
            </th>
            <th>
                Created Date
            </th>
            <th class="text-center">
                Actions
            </th>


        </tr>

        @foreach (var item in Model.listUser)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.UserName
                </td>
                <td>
                    @item.EmailId
                </td>
                <td>
                    @item.MobileNo
                </td>
                <td>
                    @if (item.RoleId == 1)
                    {
                        @("Admin")

                    }
                    else if (item.RoleId == 2)
                    {
                        @("Cashier")
                    }

                </td>
                <td>
                    @item.Password
                </td>
                <td>
                    @item.City
                </td>
                <td>
                    @item.StoreId
                </td>
                <td>
                    @item.CreatedBy
                </td>
                <td>
                    @item.CreatedDate
                </td>
                <td class="text-center">
                    <a href="#" onclick="GetUser(@item.Id)"><i class="fas fa-pen"></i></a>  &nbsp;|&nbsp;
                    <a href="#" onclick="DeleteUser(@item.Id)"><i class="fa  fa-trash" style="color:red"></i> </a>
                </td>

            </tr>
        }
    </table>
</div>
<h3>Customers</h3>
<div>Customer Count:  @Model.CustomerCount</div>
<div>

    <table class="table table-dark table-bordered table-hover table-sm"
           border="1">
        <tr>
            <th>
                Cust Id
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Mobile No
            </th>
            <th>
                Created By
            </th>
            <th>
                Created Date
            </th>
            <th class="text-center">
                Actions
            </th>



        </tr>

        @foreach (var item in Model.listCustomer)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.CustomerName
                </td>
                <td>
                    @item.MobileNo
                </td>
                <td>
                    @item.CreatedBy
                </td>
                <td>
                    @item.CreatedDate
                </td>
                <td class="text-center">
                    <a href="#" onclick="GetCustomer(@item.Id)"><i class="fas fa-pen"></i></a>  &nbsp;|&nbsp;
                    <a href="#" onclick="DeleteCustomer(@item.Id)"><i class="fa  fa-trash" style="color:red"></i> </a>
                </td>
            </tr>
        }
    </table>
</div>


