@model ShopNowBL.Model.tblCustomer

@{
    ViewBag.Title = "Add Customer";
}

<h2>Add Customer</h2>




@using (Html.BeginForm("saveCustomer", "User", FormMethod.Post))

{
    <div class="form-horizontal">

        <hr />
        @Html.HiddenFor(model => model.Id)

        <div class="row mb-3  input-group">

            @Html.Label("CustomerName", "Customer Name", new { @class = "control-label col-md-1" })
            <div class="col-md-11">
                @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control", pattern = "[a-zA-Z][a-zA-Z ]{2,}", autofocus = true } })

            </div>
        </div>

        <div class="row mb-3  input-group">
            @Html.Label("MobileNo", "Mobile No", new { @class = "control-label col-md-1" })
            <div class="col-md-11">
                @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control", pattern = @"^!*(\d!*){10,}$" } })

            </div>
        </div>




        <br />
        <div class="row mb-3  input-group">
            <div class="col offset-2 col-md-4">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}



