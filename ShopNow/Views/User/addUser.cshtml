@model ShopNowBL.Model.tblUser

@{
    ViewBag.Title = "addUser";
}


@using (Html.BeginForm("saveUser","User",FormMethod.Post)) 
{
    
    <div class="form-horizontal">
       
        @Html.HiddenFor(model => model.Id)
        <hr />
        <div class="row mb-3  input-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-11">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="row mb-3  input-group">
            @Html.LabelFor(model => model.EmailId, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-11">
                @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="row mb-3  input-group">
            @Html.LabelFor(model => model.MobileNo, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-11">
                @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="row mb-3  input-group">
            @Html.LabelFor(model => model.RoleId, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-11">
                @Html.DropDownListFor(x => x.RoleId, new List<SelectListItem>
     {
                         new SelectListItem() {Text = "Admin", Value="1"},
                         new SelectListItem() {Text = "Cashier", Value="2"}

     })
            </div>
        </div>

        <div class="row mb-3  input-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-11">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="row mb-3  input-group">
            @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-11">
                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="row mb-3  input-group">
            @Html.LabelFor(model => model.StoreId, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-11">
                @Html.EditorFor(model => model.StoreId, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>


        <div class="row mb-3  input-group">
            <div class="col offset-2 col-md-4">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

