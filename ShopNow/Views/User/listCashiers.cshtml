@model List<ShopNowBL.Model.tblUser>

@{
    ViewBag.Title = "listCashiers";
}

<h2>Cashiers</h2>


<table class="table table-dark table-bordered table-hover table-sm" >
    <tr>
        <th>
            User Id
        </th>
        <th>
            UserName
        </th>
        <th>
            Email Id
        </th>
        <th>
            Mobile No
        </th>
        <th>
            Role 
        </th>
        <th>
            Password
        </th>
        <th>
            City
        </th>
        <th>
            Store Id
        </th>
        <th>
            Created By
        </th>
        <th>
            Created Date
        </th>
        <th class="text-center">
            Actions
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.UserName
            </td>
            <td>
                @item.EmailId
            </td>
            <td>
                @item.MobileNo
            </td>
            <td>
                @if (item.RoleId == 1)
                {
                    @("Admin")

                }
                else if (item.RoleId == 2)
                {
                    @("Cashier")
                }

            </td>
            <td>
                @item.Password
            </td>
            <td>
                @item.City
            </td>
            <td>
                @item.StoreId
            </td>
            <td>
                @item.CreatedBy
            </td>
            <td>
                @item.CreatedDate
            </td>
            <td align="center">
                <a href=@Url.Action("editUser","User",new {id=item.Id})><i class="fas fa-pen"></i></a> &nbsp|&nbsp

                <a href=@Url.Action("deleteCashier","User",new {id=item.Id}) new { onclick="return confirm('Confirm delete?');" })><i class="fa fa-trash" style="color:red"></i></a>
            </td>

        </tr>
    }

</table>
