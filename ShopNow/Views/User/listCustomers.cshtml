@model List<ShopNowBL.Model.tblCustomer>

@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2>
<p>@Html.ActionLink("Add Customer", "addCustomer", "User",null, new {@class="btn btn-primary"})</p>


<table class="table table-dark table-bordered table-hover table-sm">
    <tr>
        <th>
            Cust Id
        </th>
        <th>
            Customer Name
        </th>
        <th>
            Mobile No
        </th>
        <th>
            Created By
        </th>
        <th>
            Created Date
        </th>
        <th class="text-center">
            Actions
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.CustomerName
            </td>
            <td>
                @item.MobileNo
            </td>
            <td>
                @item.CreatedBy
            </td>
            <td>
                @item.CreatedDate
            </td>
            <td align="center">
                <a href=@Url.Action("editCustomer","User",new {id=item.Id})> <i class="fas fa-pen"></i> </a> &nbsp|&nbsp


                <a href=@Url.Action("deleteCustomer","User",new {id=item.Id}) new { onclick="return confirm('Confirm delete?');" })> <i class="fa  fa-trash" style="color:red"></i> </a>
            </td>

        </tr>
    }

</table>
