@model IEnumerable<ShopNowBL.Model.tblUser>

@{
    ViewBag.Title = "listUsers";
}

<h3 >Users</h3>

<p>
    @Html.ActionLink("Add User", "addUser","User", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-dark table-bordered table-hover table-sm">
    <tr>
        <th>
            User ID
        </th>
        <th>
            User Name
        </th>
        <th>
            Email Id
        </th>
        <th>
            Mobile No
        </th>
        <th>
            Role
        </th>
        <th>
            Password
        </th>
        <th>
            City
        </th>
        <th>
            Store Id
        </th>
        <th>
            Created By
        </th>
        <th>
            Created Date
        </th>
        <th class="text-center">
            Actions
        </th>

    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MobileNo)
        </td>
        <td>
            @if (item.RoleId == 1)
            {
                @("Admin")
              
               }
             else if(item.RoleId==2){
            @("Cashier")
            }

            </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StoreId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td align="center">
            <a href=@Url.Action("editUser","User",new {id=item.Id})> <i class="fas fa-pen"></i> </a> &nbsp|&nbsp
            <a href=@Url.Action("deleteUser","User",new {id=item.Id}) new { onclick="return confirm('Confirm delete?');" })><i class="fa  fa-trash" style="color:red"></i></a>
        </td>
    </tr>
}

</table>
